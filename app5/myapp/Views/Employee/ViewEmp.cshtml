@using myapp.Models;
@{
    ViewData["Title"] = "Employee Page";
    Employee item = ViewData["emp"] as Employee;
}

<div>
    <div class="container">
        <h1>Employees</h1>
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-light table-striped">
                    <tbody>
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Address</th>
                                <th scope="col">Phone</th>
                                
                            </tr>
                        </thead>
                            <tr scope="row" >
                                <td>@item.Id &nbsp;</td>
                                <td>@item.Name &nbsp;</td>
                                <td>@item.Email &nbsp;</td>
                                <td>@item.Address &nbsp;</td>
                                <td>@item.Phone &nbsp;</td>
                                
                            </tr>
                    </tbody>
                </table>
            </div>