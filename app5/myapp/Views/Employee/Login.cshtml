@model myapp.Models.Employee;
@{
    ViewData["Title"] = "Login Page";
}

<form method="post" action="Login" class="form-group">
    <label>Email:</label>
    <input type="text" asp-for="Email" placeholder="Enter your email" class="form-control">
    <label>Password:</label>
    <input type="text" asp-for="Id" placeholder="id is password" class="form-control">
    <button class="btn btn-primary" type="submit">Login</button>
</form>